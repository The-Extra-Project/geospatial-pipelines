{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "types": ["node", "jest", "mocha"],
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "composite": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "paths": {
      "@web3/*": [
        "./*"
      ]
    },
    // for the skipping of the .dts files etc.
    "skipDefaultLibCheck": true /* Skip type checking .d.ts files that are included with TypeScript. */,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "scripts/",
    "test/",
    "chainlink-functions/",
    "server/"
   ],
  "exclude": [
    "node_modules",
  ],
  "files": [
    "./hardhat.config.ts",
    "index.ts"
  ]
}

