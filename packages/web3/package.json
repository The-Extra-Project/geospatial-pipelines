{
  "name": "@geospatial-pipelines/web3",
  "version": "0.1.0",
  "description": "package to deploy the smart contracts that associate the tokens to the various clients proportional to their contribution",
  "main": "index.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test:abstractWallet": "jest dist/test/comethWallet.spec.js",
    "test:wallet": "jest scripts/comethWallet.spec.ts",
    "run-function": "ts-node ./chainlink-functions/request.ts",
    "deploy:token:mumbai": "hardhat run scripts/deploy.ts --network polygonMumbai",
    "verify:token:mumbai": "npx hardhat verify --network polygonMumbai --constructor-args parameters.js",
    "build": "rm -rf dist/ && tsc && tsc-alias",
    "test:comethWallet": "nodemon --exec npm run build",
    "task:comethWallet": "hardhat wallet --network polygonMumbai",
    "test:token": "npx hardhat test scripts/circumtoken.spec.ts --network polygonMumbai",
    "compile": "npx hardhat compile"
  },
  "keywords": [
    "web3",
    "tokenization"
  ],
  "author": "Dhruv",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@chainlink/env-enc": "^1.0.5",
    "@chainlink/functions-toolkit": "^0.2.8",
    "@chainlink/hardhat-chainlink": "^0.0.2",
    "@cometh/connect-sdk": "^1.2.12",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v5": "^11.1.2",
    "dotenv": "^16.4.2",
    "expressjs": "^1.0.1",
    "hardhat": "^2.19.4",
    "hardhat-verify": "^1.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/jest": "^29.5.12",
    "ethers": "^5.7.0",
    "nodemon": "^3.0.3",
    "typechain": "^8.3.2"
  }
}
